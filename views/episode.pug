html
  head
    title=data.show_name
  include header.pug
  body
    div(class="m-3")
      h2= data.show_name
        img(src='/../../../../media/icon-chan.png' class="header-icon" style="border-radius: 50%" width="30em")
      h3= "Episode "+data.episode
      a(href="/prod-data/videos/"+data.filename) Download Link

    .video-container
      video
        source(src="/prod-data/videos/"+data.filename type="video/mp4")
